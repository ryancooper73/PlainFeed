<!DOCTYPE html>
<html>
<%- include('partials/head') %>
<body>
  <div class="container">
    <%- include('partials/header', { user }) %>
    
    <div class="auth-container page-transition" style="max-width: 600px;">
      <h2>Create Post</h2>
      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>
      <form action="/create-post" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="content">Share something positive!</label>
          <textarea id="content" name="content" rows="4" required 
            placeholder="Share something that makes you smile..."></textarea>
        </div>
        <div class="form-group">
          <label for="image">Add an image</label>
          <input type="file" id="image" name="image" accept="image/*">
        </div>
        <div style="display: flex; gap: 1rem;">
          <button type="submit" class="btn" style="flex: 1">Post</button>
          <a href="/" class="btn btn-secondary" style="flex: 1">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>